@model Choice.Models.StudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <input type="hidden" asp-for="Student.Name" />
            <input type="hidden" asp-for="Student.Group" />
            <div class="form-group">

                @for (var i = 0; i < Model.Disciplines.Count; i++)
                {
                    <div class="form-check">
                        <input class="form-check-input ml-auto" type="checkbox" asp-for="@Model.Disciplines[i].IsStudied" />
                        <label class="form-check-label ml-4" asp-for="@Model.Disciplines[i].IsStudied">@Model.Disciplines[i].Discipline.Title</label>
                        <input type="hidden" asp-for="@Model.Disciplines[i].Discipline.Id" />
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

